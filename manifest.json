{
    "name": "Mitt",
    "version": "0.1",
    "manifest_version": 2,
    "description": "Mitt helps you to get the file download URL from website pages",
    "browser_action": {
        //"default_icon": "icon.png"
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["runtime.js"]
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "http://*/*",
        "https://*/*",
        "contextMenus",
        "tabs"
    ]
}
